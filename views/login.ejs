<div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login </h1>
                <% include ./partials/messages %>
                <form action="/users/login" method="POST">
                  <div class="form-group">
                     <label for="email">Email</label>
                     <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control" value="<%= typeof email != 'undefined' ? email : '' %>" /> 
                  </div>
                  <div class="form-group">
                     <label for="password">Password</label>
                     <input type="password" name="password" id="password" placeholder="Enter password" class="form-control" value="<%= typeof email != 'undefined' ? password : '' %>" /> 
                  </div>
                  <button type="submit" class="btn bt-primary btn-block" > Login </button>
                </form>  
                <p class="lead mt-4"> Dont have an Account? <a href="/users/register"> Register </a></p>
            </div>
        </div> 
     </div>